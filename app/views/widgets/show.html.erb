<div class='widget'>
	<p><%= @widget.name %></p>
	<p><%= @widget.description %></p>
<% unless @widget.properties.empty? %>
	<table><thead>
		<tr><th>key</th><th>value</th></tr>
	</thead><tbody>
	<% @widget.properties.each do |property| %>
	<tr>
		<td><%= property.key %></td>
		<td><%= property.value %></td>
	</tr>
	<% end %><%# @widget.properties.each do |property| %>
	</tbody></table>
<% end %>
</div><!-- class='widget' -->
